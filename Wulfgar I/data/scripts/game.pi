    virtual Move(){
        if(DEBUG_MODE){
            //Para ver la hora del sistema ponemos esto
            SysTime_Update(time);
            time_str = SysTime_ToString(time, "time: mm:ss");
            //Con esto vamos a la siguiente pantalla al pulsar en escape
            if(GetApp().stageGlobal.pad.IsButton(PAD_BUTTON_3)){
                Change_stage();
            }
        }
        //Esto es olo para la pantalla 13 que sale una sombra
        if(shadow_mode){
            //La imagen negra son 1600*900
            stage.shadow.SetPos(player1.GetX()-800,player1.GetY()-450); 
            //vamos a motrar solo los objetos que estén a menos de 100 pixeles
            for(x=0; x<sizeof(objects);x++) {
                if(player1.DistanceTo(objects[x])<160) objects[x].SetVisible(true);
                else objects[x].SetVisible(false);
            }
            for(y=0; y<sizeof(enemies);y++) {
                if(player1.DistanceTo(enemies[y])<160){
                    enemies[y].SetVisible(true);
                } else {
                    enemies[y].SetVisible(false);
                }
            }
        } 
    
        if(background_moving){
            stage.bgr.IncUV(0.005f,0);
        }
    }

    function get_time_seconds_str(){
        SysTime_Update(time);
        //_str = SysTime_ToString(st, "Fecha: YYYY/MM/DD Hora: hh:mm:ss");
        time_str = SysTime_ToString(time, "ss");
        return time_str;
    }
    function get_time_minutes(){
        SysTime_Update(time);
        //[0]Año (a partir del 1900) //[2] Mes en formato del 1 al 12  
        //[2] Día en formato del 1 al 31 //[3] Hora	en formato del 0 al 23 // 
        //[4] Minuto en formato del 0 al 59 //[5] Segundo en formato del 0 al 59
        _time = SysTime_Get(time);
        return _time[5];
    }

