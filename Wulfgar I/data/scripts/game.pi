    function change_stage(){
        player1.SetCollision(false);
        fade_game.SetOnCompleted(this,"ChangeStage");
        fade_game.On();
    }


    function ChangeStage(){
        
        currentStage++;
        fade_game.Off();
        //GetEngine().LogPrint("camniando a la escena "+currentStage);
        //if(currentStage>21) currentStage=0;
        if(stage!=null) delete stage;
        if(currentStage>1) GetApp().stageGlobal.play_sound_change_level();
        if(currentStage==6 || currentStage==11 || currentStage==16) GetApp().StageGlobal.get_music_boss_fighting().Stop();
        else  GetApp().StageGlobal.GetMusicIngame().Stop();
        switch (currentStage){
            /**
             * El bosque
             */
            case 1: 
                GetApp().stageGlobal.map.SetAnimation("map1");
                GetApp().SetShowMap(true);
                stage=New Stage1(this);
                break;
            case 2:
                stage=New Stage2(this);
                break;
            case 3:
                stage=New Stage3(this);
                break;
            // Pantalla vertical
            case 4: 
                GetApp().set_vertical_stage(true);
                stage=New Stage4(this);
                break;
            //Combate boss 1: el escorpión gigante
            case 5:
                GetApp().SetCameraNotMove(true);
                stage=New Stage5(this);
                break;

            /**
             * El prado
             */
            //Pantalla de los muelles
            case 6: 
                GetApp().SetCameraNotMove(false);
                GetApp().stageGlobal.map.SetAnimation("map2");
                GetApp().SetShowMap(true);
                stage=New Stage6(this);
                break;
            //pantalla a correr
            case 7: 
                GetApp().SetCameraNotMove(true);
                stage=New Stage7(this);
                break;
            case 8: 
                GetApp().SetCameraNotMove(false);
                stage=New Stage8(this);
                break;
            case 9: 
                stage=New Stage9(this);
                break;
            case 10: 
                GetApp().SetCameraNotMove(true);
                stage=New Stage10(this);
                break;


            /**
             * Las cuevas
             */
            case 11: 
                GetApp().SetCameraNotMove(false);
                GetApp().stageGlobal.map.SetAnimation("map3");
                GetApp().SetShowMap(true);
                stage=New Stage11(this);
                break;
            case 12: 
                stage=New Stage12(this);
                break;
            case 13: 
                stage=New Stage13(this);
                break;
            // La oscuridad
            case 14: 
                stage=New Stage14(this);
                break;
            //Combate boss 3: araña gigante
            case 15: 
                GetApp().SetCameraNotMove(true);
                stage=New Stage15(this);
                break;


            /**
             * El castillo
             */
            case 16: 
                GetApp().stageGlobal.map.SetAnimation("map4");
                GetApp().SetShowMap(true);
                GetApp().SetCameraNotMove(false);
                stage=New Stage16(this);
                break;
            case 17: 
                stage=New Stage17(this);
                break;
            case 18: 
                stage=New Stage18(this);
                break;
            case 19: 
                stage=New Stage19(this);
                break;
            //Combate boss 2: El dragón rojo
            case 20: 
                GetApp().SetCameraNotMove(true);
                stage=New Stage20(this);
                break;
            
        }
        if(currentStage==5 || currentStage==10 || currentStage==15 || currentStage==20) GetApp().StageGlobal.play_music_boss_fighting();
        else GetApp().StageGlobal.play_music_ingame();
        
        //ponemos la cámara en la posición inicial
        if(!GetApp().is_vertical_stage)SetCameraPos(0,0);
        //Le ponemos un efecto de fade
       // GetApp().stageGlobal.fadeInEffect();
        player1.SetCollision(true);
	}

    //Objects
    function create_object(_type, _x, _y){
        //Crea los objectos del juego, parámetros game, tipo de objeto y posición
        object=NewObject(_type,"object",[this,_type,_x, _y]);
        objects+=[object];
    }
    function delete_objects(){
       	for(x=0; x<sizeof(objects);x++) delete objects[x];
        objects=[];
    }
    function delete_object(_object){
        objects-=[_object];
        delete _object;
    }

